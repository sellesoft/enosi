/*
 *  System that translates mouse clicks to interaction events on Entities
 *  containing an Interactable component.
 */

$ require "common"

@@lpp.import "game/entity/EntitySystem.lh"

struct InputSys;
struct EyeSys;
struct MapSys;

struct InteractionSys : EntitySystem
{
  InputSys& input;
  EyeSys&   eye;
  MapSys&   map;
  
  b8 init() { return true; }

  b8 update();
};
