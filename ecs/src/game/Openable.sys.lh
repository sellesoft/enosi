/*
 *  System managing Openable component state.
 */

$ require "common"

@@lpp.import "game/entity/EntitySystem.lh"
@@lpp.import "game/Interactable.comp.lh"
@@lpp.import "game/Interaction.events.lh"
@@lpp.import "game/Openable.comp.lh"

struct OpenableSys : EntitySystem
{
  b8 init()
  {
    subscribeTo<Openable, Interact>(&OpenableSys::onInteract);

    return true;
  }

  void onInteract(EntComp<Openable> ent, Interact&);
};
